<%- include("header")-%>
<br>
<div class="table">
    <div class="container">
        <h1>Customers List</h1>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="row">Customer ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email ID</th>
                    <th>Balance</th>
                </tr>
                
            </thead>
            <tbody>
                
                <% newUserItems.forEach(user => {%>
                    <tr>
                        <td scope="col"><a href="/profile/<%=user.custID%>"><%=user.custID%></a></td>
                        <td scope="col"><%=user.firstName%></td>
                        <td scope="col"><%=user.lastName%></td>
                        <td scope="col"><%=user.emailID%></td>
                        <td scope="col"><%=user.amount%></td>
                    </tr>
                <%});%>
            </tbody>
        </table>
    </div>
</div>



<%- include("footer")-%>